---
// Hero component with warm, professional aesthetic
---

<section id="home" class="relative min-h-screen flex items-center bg-gradient-to-br from-stone-50 via-amber-50/30 to-rose-50/20 overflow-hidden">
  <!-- Subtle texture overlay -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"%3E%3Cg fill="none" fill-rule="evenodd"%3E%3Cg fill="%23000000" fill-opacity="0.05"%3E%3Cpath d="M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')] bg-center"></div>
  </div>
  
  <!-- Navigation -->
  <nav class="absolute top-0 left-0 right-0 z-50 px-6 md:px-12 lg:px-20 py-6">
    <div class="max-w-7xl mx-auto flex items-center justify-between">
      <a href="/" class="text-2xl font-black tracking-tight text-stone-900">
        WIPS<span class="text-amber-600">.</span>
      </a>
      
      <div class="hidden md:flex items-center gap-8">
        <a href="#services" class="text-stone-700 hover:text-stone-900 font-medium transition-colors">Services</a>
        <a href="#global" class="text-stone-700 hover:text-stone-900 font-medium transition-colors">Global Reach</a>
        <a href="#testimonials" class="text-stone-700 hover:text-stone-900 font-medium transition-colors">Success Stories</a>
        <a href="/contact" class="inline-flex items-center gap-2 px-6 py-3 bg-stone-900 text-white rounded-full font-semibold hover:bg-stone-800 hover:scale-105 transition-all duration-300">
          Get Started
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
      
      <!-- Mobile menu button -->
      <button class="md:hidden p-2">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </nav>
  
  <!-- Hero content -->
  <div class="relative z-10 max-w-7xl mx-auto px-6 md:px-12 lg:px-20 py-32 md:py-40">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
      <!-- Text content -->
      <div class="space-y-8">
        <h1 class="text-5xl md:text-6xl lg:text-7xl font-black tracking-tight text-stone-900 animate-on-scroll">
          Global Talent,
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-amber-600 to-rose-600">Delivered</span>
        </h1>
        
        <p class="text-xl md:text-2xl text-stone-700 leading-relaxed animate-on-scroll">
          Connecting exceptional professionals with world-class opportunities across borders.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 animate-on-scroll">
          <a href="/contact" class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-amber-600 text-white rounded-full font-semibold hover:bg-amber-700 hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl">
            Start Your Search
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
          <a href="#services" class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-white text-stone-900 rounded-full font-semibold hover:bg-stone-50 transition-all duration-300 shadow-lg hover:shadow-xl">
            Explore Services
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </a>
        </div>
        
        <!-- Trust indicators -->
        <div class="flex items-center gap-8 pt-8 animate-on-scroll">
          <div>
            <div class="text-3xl font-black text-stone-900">25+</div>
            <div class="text-sm text-stone-600">Years Experience</div>
          </div>
          <div class="w-px h-12 bg-stone-300"></div>
          <div>
            <div class="text-3xl font-black text-stone-900">10K+</div>
            <div class="text-sm text-stone-600">Placements</div>
          </div>
          <div class="w-px h-12 bg-stone-300"></div>
          <div>
            <div class="text-3xl font-black text-stone-900">95%</div>
            <div class="text-sm text-stone-600">Success Rate</div>
          </div>
        </div>
      </div>
      
      <!-- Hero image -->
      <div class="relative animate-on-scroll">
        <div class="relative rounded-3xl overflow-hidden shadow-2xl">
          <img 
            src="https://images.unsplash.com/photo-1600880292203-757bb62b4baf?auto=format&fit=crop&q=80&w=1000" 
            alt="Professional team meeting in modern office"
            class="w-full h-auto"
            loading="eager"
          />
        </div>
        <!-- Decorative elements -->
        <div class="absolute -top-4 -right-4 w-72 h-72 bg-amber-400/20 rounded-full blur-3xl"></div>
        <div class="absolute -bottom-8 -left-8 w-96 h-96 bg-rose-400/20 rounded-full blur-3xl"></div>
      </div>
    </div>
  </div>
  
  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-stone-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>